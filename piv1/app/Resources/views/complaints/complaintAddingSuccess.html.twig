{% extends 'layoutFront.html.twig' %}

{% block body %}
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Complaints
                <small>Someone bothers you? Let's take a look!</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active">Contact</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <!-- Intro Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Advanced Table</div>
                <div class="panel-body">


                    <!-- /.row -->
                    <!-- Intro Content -->
                    <div class="row">
        <div class="col-md-6">
            <img class="img-responsive" src="{% if not complaint.attachment==" " %}{{ asset('uploads/') }}{{ complaint.attachment }}{% else %}{{ asset('uploads/no.png') }}{% endif %}" alt="">
        </div>
        <div class="col-md-6">
            <h4>You should receive an answer soon</h4>
            <p>{{ complaint.iduser.username }} : {{ complaint.type }}</p>
            <p>{% if complaint.datetime %}{{ complaint.datetime|date('Y-m-d H:i:s') }}{% endif %}</p>
            <p>{{ complaint.content }}</p>
        </div>
                    </div></div></div></div></div></div>
    <!-- /.row -->


{% endblock %}
